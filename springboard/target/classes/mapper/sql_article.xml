<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace : 경로 -->
<mapper namespace="mapper.sql_article">


	<insert id="INSERT_ARTICLE">
		INSERT INTO `BOARD_ARTICLE` SET 
			`cate` = #{cate}, 
			`title` = #{title}, 
			`content` = #{content}, 
			`uid` = #{uid}, 
			`regip` = #{regip}, 
			`rdate` = NOW(); 	
	</insert>
	
	<select id="SELECT_ARTICLES" resultType="kr.co.springboard.vo.ArticleVO">
		SELECT a.*, b.nick FROM `BOARD_ARTICLE` AS a 
		JOIN `BOARD_MEMBER` AS b ON a.uid = b.uid 
		WHERE `parent`=0 
		ORDER BY `seq` DESC 
		LIMIT #{start}, 10;
	</select>
	
	<select id="SELECT_ARTICLE" resultType="kr.co.springboard.vo.ArticleVO">
		SELECT * FROM `BOARD_ARTICLE` WHERE `seq`=#{seq};
	</select>
	
	<select id="SELECT_TOTAL_ARTICLES" resultType="int">
		SELECT COUNT(*) FROM `BOARD_ARTICLE` WHERE `parent`=0;
	</select>
	
	<update id="UPDATE_ARTICLE">
		UPDATE `BOARD_ARTICLE` SET 
			`title`=#{subject}, 
			`content`=#{content} 
			WHERE `seq`=#{seq};	
	</update>
	
	<delete id="DELETE_ARTICLE">
		DELETE FROM `BOARD_ARTICLE` WHERE `seq`=#{seq};
	</delete>
	
	
	
	
	<insert id="INSERT_COMMENT">
		INSERT INTO `BOARD_ARTICLE` SET
			`parent`=#{parent}, 
			`content`=#{content}, 
			`uid`=#{uid}, 
			`regip`=#{regip}, 
			`rdate`=NOW();
	</insert>
	
	<select id="SELECT_COMMENT" resultType="kr.co.springboard.vo.ArticleVO">
		SELECT a.*, b.nick FROM `BOARD_ARTICLE` AS a 
		JOIN `BOARD_MEMBER` AS b ON a.uid = b.uid 
		WHERE `parent`=#{parent} ORDER BY `seq` ASC;
	</select>

</mapper>